<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="64dp"
    android:padding="6dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ra_item_badge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/ra_list_badge_desc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ra_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/ra_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFA500"
                android:textSize="11sp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/ra_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/ra_item_rarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="11sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ra_item_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/ra_item_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/ra_item_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B0B0B0"
                android:textSize="11sp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ra_item_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFD700"
        android:textSize="14sp"
        android:textStyle="bold"
        android:minWidth="32dp"
        android:gravity="center" />

</LinearLayout>
