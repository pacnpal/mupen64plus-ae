<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mupen_black"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/ra_list_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ra_list_panel_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ra_list_header_bg"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/ra_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/ra_list_title"
                android:textColor="@color/mupen_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ra_list_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ra_list_icon_button_bg"
                android:contentDescription="@string/ra_list_close"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@id/ra_list_recycler"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ra_list_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textColor="@color/gray2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2AFFFFFF" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ra_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:descendantFocusability="afterDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/ra_list_close"
            android:overScrollMode="never"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
