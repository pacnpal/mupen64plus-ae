<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="#2E3D4A" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/mupen_primary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#2E3D4A" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/mupen_primary" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2A3842" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#5058D3D3" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1D272F" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#30444E" />
        </shape>
    </item>
</selector>
